<AddCategoryTagClasses @category={{this.category}} />

<section class="category-heading">
  {{#if this.category.uploaded_logo.url}}
    <CdnImg @src={{this.category.uploaded_logo.url}} @class="category-logo" @width={{this.category.uploaded_logo.width}} @height={{this.category.uploaded_logo.height}} @alt="" />

    {{#if this.category.description}}
      <p>{{dir-span this.category.description htmlSafe="true"}}</p>
    {{/if}}
  {{/if}}

  <PluginOutlet @name="category-heading" @tagName="span" @connectorTagName="div" @args={{hash category=this.category}} />
</section>

<DSection @class="navigation-container category-navigation">
  <DNavigation @category={{this.category}} @filterMode={{this.filterMode}} @noSubcategories={{this.noSubcategories}} @canCreateTopic={{this.canCreateTopic}} @createTopic={{route-action "createTopic"}} @createTopicDisabled={{this.cannotCreateTopicOnCategory}} @hasDraft={{this.currentUser.has_topic_draft}} @editCategory={{route-action "editCategory" this.category}} />

  <PluginOutlet @name="category-navigation" @connectorTagName="div" @args={{hash category=this.category}} />
</DSection>
