{{#if this.multiple}}
  <DropdownSelectBox @class="reviewable-action-dropdown" @nameProperty="label" @content={{this.bundle.actions}} @onChange={{action "performById"}} @options={{hash
      icon=this.bundle.icon
      disabled=this.reviewableUpdating
      placement=this.placement
      translatedNone=this.bundle.label
    }} />
{{else}}
  <DButton @class={{concat "reviewable-action " (dasherize this.first.id) " " this.first.button_class}} @icon={{this.first.icon}} @action={{action "perform" this.first}} @translatedLabel={{this.first.label}} @disabled={{this.reviewableUpdating}} />
{{/if}}
