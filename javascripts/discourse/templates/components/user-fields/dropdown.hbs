<label class="control-label" for={{concat "user-" this.elementId}}>
  {{this.field.name}}
  {{#if this.field.required}}
    <span class="required">*</span>
  {{/if}}
</label>

<div class="controls">
  <ComboBox @id={{concat "user-" this.elementId}} @content={{this.field.options}} @valueProperty={{null}} @nameProperty={{null}} @value={{this.value}} @onChange={{action (mut this.value)}} @options={{hash
      none=this.noneLabel
    }} />
  <div class="instructions">{{html-safe this.field.description}}</div>
</div>
