<div class="ignored-list">
  {{#each this.items as |item|}}
    <IgnoredUserListItem @item={{item}} @onRemoveIgnoredUser={{action "removeIgnoredUser"}} />
  {{else}}
    {{i18n "user.user_notifications.ignore_no_users"}}
  {{/each}}
</div>
<div class="instructions">{{i18n "user.ignored_users_instructions"}}</div>
<div><DButton @action={{action "newIgnoredUser"}} @class="btn-default" @icon="plus" @label="user.user_notifications.add_ignored_user" /></div>
