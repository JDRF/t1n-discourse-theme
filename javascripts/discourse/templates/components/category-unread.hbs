{{/if}}
{{#if this.category.newTopics}}
  <a href={{this.category.newUrl}} title={{i18n "topic.new_topics" count=this.category.newTopics}} class="badge new-posts badge-notification">{{i18n "filters.new.lower_title_with_count" count=this.category.newTopics}}</a>
{{/if}}
