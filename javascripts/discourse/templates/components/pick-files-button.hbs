{{#if this.showButton}}
  <DButton @action={{action "openSystemFilePicker"}} @label={{this.label}} @icon={{this.icon}} />
{{/if}}
{{#if this.acceptsAllFormats}}
  <input type="file" id={{this.fileInputId}} class={{this.fileInputClass}} multiple={{this.allowMultiple}} disabled={{this.fileInputDisabled}}>
{{else}}
  <input type="file" id={{this.fileInputId}} class={{this.fileInputClass}} accept={{this.acceptedFormats}} multiple={{this.allowMultiple}} disabled={{this.fileInputDisabled}}>
{{/if}}
