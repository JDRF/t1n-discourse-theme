<div id="suggested-topics" class="suggested-topics" role="complementary" aria-labelledby="suggested-topics-title">
  <h3 id="suggested-topics-title" class="suggested-topics-title">
    {{i18n this.suggestedTitleLabel}}
  </h3>

  <div class="topics">
    {{#if this.topic.isPrivateMessage}}
      <BasicTopicList @hideCategory="true" @showPosters="true" @topics={{this.topic.suggestedTopics}} />
    {{else}}
      <BasicTopicList @topics={{this.topic.suggestedTopics}} />
    {{/if}}
  </div>

  <h3 class="suggested-topics-message">
    {{html-safe this.browseMoreMessage}}
  </h3>
</div>

<PluginOutlet @name="below-suggested-topics" @tagName="span" @connectorTagName="div" @args={{hash topic=this.topic}} />
